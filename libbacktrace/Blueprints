common_cflags = [
    "-Wall",
    "-Werror",
]

common_conlyflags = ["-std=gnu99"]

common_cppflags = ["-std=gnu++11"]

build_host = ["false"]
// ANDROIDMK TRANSLATION ERROR: unsupported conditional
